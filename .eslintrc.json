{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "plugin:vue/essential"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "vue/no-unused-vars": "error",
    "semi": [
      "error",
      "never"
    ],
    "jsx-a11y/href-no-hash": [
      "off"
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        "tabWidth": 2,
        "comments": 80,
        "ignoreComments": false,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ]
  }
}